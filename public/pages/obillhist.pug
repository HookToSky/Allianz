doctype html
html(lang='en')
  head
    include header_with_charts.pug
    title Allianz ICS system
  body
    #wrapper
      // Navigation
      include navbar.pug
      #page-wrapper
        .row
          .col-lg-12
            h1.page-header Owing Bill Details
          // /.col-lg-12
        // /.row
        .row
          .col-lg-12
            form(action="http://localhost:30001/ics/edit_bill/"+ obill.billId.toString() method="POST")
              .row
              p Bill ID: #{obill.billId}
              .row
              p Total Amount: #{obill.totalAmount}
              .row
              p HOE: #{obill.hoe}
              .row
              p Status: #{obill.status}
              .row
              .col-4
                p Due Date:
              .col-4
                input#datepicker(type="text" name="dueDate" placeholder="date")
              .row
              .col-4
                p Handling Fee:
              .col-4
                input(type="text" name="handlingFee" placeholder="handling fee")
              .row
              input(type="submit")
        .row
          .col-lg-12
            h1.page-header Bill History
        .row
          .col-lg-12
            .panel.panel-default
              .panel.panel-default
                .panel-heading
                  i.fa.fa-clock-o.fa-fw
                  |  Responsive Timeline
                // /.panel-heading
                .panel-body
                  ul.timeline
                    each bill, index in bills
                      case index%2
                        when 0
                          li.timeline
                            .timeline-badge.warning
                              i.fa.fa-tasks
                            .timeline-panel
                              .timeline-heading.panel.panel-green
                                .panel-heading
                                  h4.timeline-title Bill # #{bill.billId}                            
                              .timeline-body
                                p Status #{bill.status}
                                p Due Date #{bill.dueDate}
                                p Outstanding #{bill.totalOutstanding}
                        when 1
                          li.timeline-inverted
                            .timeline-badge.warning
                              i.fa.fa-tasks
                            .timeline-panel
                              .timeline-heading.panel.panel-green
                                .panel-heading
                                  h4.timeline-title Bill # #{bill.billId}                            
                              .timeline-body
                                p Status #{bill.status}
                                p Due Date #{bill.dueDate}
                                p Outstanding #{bill.totalOutstanding}
                // /.row
              // /.panel-body
            // /.panel
            // /.panel
          // /.col-lg-8
          // /.col-lg-4
        // /.row
      // /#page-wrapper
    // /#wrapper
    // jQuery
    include scripts_with_charts.pug
    script.
      $(document).ready(function () {
          $( function() {
              $( "#datepicker" ).datepicker();
          } );
      });
